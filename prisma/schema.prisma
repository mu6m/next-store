generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum user_type {
  ADMIN
  CUSTOMER
}

model user {
  id       String @id @unique @default(cuid())
  email    String @unique
  username String @unique
  password String

  name String[]

  type     user_type @default(CUSTOMER)
  invoices invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cart      cart[]
}

model invoice {
  id        String   @id @unique @default(cuid())
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products invoice_product[]
}

model cart {
  id        String  @id @unique @default(cuid())
  product   product @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  productId String
  user      user    @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId    String

  count Int @default(1)

  @@unique([userId, productId])
}

model invoice_product {
  id        String  @id @unique @default(cuid())
  product   product @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  productId String
  invoice   invoice @relation(fields: [invoiceId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  invoiceId String

  count    Int     @default(1)
  refunded Boolean @default(false)

  @@unique([productId, invoiceId])
}

model category {
  id       String    @id @unique @default(cuid())
  name     String    @unique
  products product[]
}

model product {
  id        String   @id @unique @default(cuid())
  title     String   @unique
  content   String?
  images    String[]
  limit     Int?
  price     Int?     @default(0)
  published Boolean  @default(false)
  pos       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices invoice_product[]

  category   category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  cart       cart[]
}
